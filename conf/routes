
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# ScalaQuest controller controlling the game's semantics
GET     /onNewGame                  controllers.RestController.onNewGame
GET     /onQuitGame                 controllers.RestController.onQuitGame
GET     /onStartGame                controllers.RestController.onStartGame

#GET    /onAddNewPlayerToGame/:name     controllers.RestController.onAddNewPlayerToGame(name)
POST    /onAddNewPlayerToGame:name     controllers.RestController.onAddNewPlayerToGame(name)
POST    /testPost:name              controllers.RestController.testPost(name)

GET     /onGetRoundNr               controllers.RestController.onGetRoundNr
POST    /onProcessAnswer:input            controllers.RestController.onProcessAnswer(input)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Invalid URL
GET     /$path<.*>                  controllers.PageNotFoundController.index(path)
      